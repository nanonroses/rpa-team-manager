# RPA Team Manager - Environment Configuration

# Security
JWT_SECRET=your-super-secret-jwt-key-change-this-to-something-secure
JWT_EXPIRES_IN=8h

# Database
DB_PATH=./data/database.sqlite

# Server Configuration
NODE_ENV=production
PORT=3001

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# File Upload Configuration
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=50MB
ALLOWED_FILE_TYPES=pdf,doc,docx,xls,xlsx,png,jpg,jpeg,gif,txt,zip

# Backup Configuration
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=./backups

# Application Configuration
APP_NAME=RPA Team Manager
APP_VERSION=1.0.0

# Team Configuration (5 users)
TEAM_SIZE=5

# Default Admin User
DEFAULT_ADMIN_EMAIL=admin@rpa.local
DEFAULT_ADMIN_PASSWORD=ChangeMe123!

# Notification Settings (for future features)
EMAIL_ENABLED=false
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=

# Security Settings
SESSION_TIMEOUT_HOURS=8
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_SPECIAL=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_UPPERCASE=true

# Performance Settings
DATABASE_POOL_SIZE=10
REQUEST_TIMEOUT_MS=30000
MAX_CONCURRENT_UPLOADS=5

# Development Settings (only for development profile)
DEBUG_MODE=false
LOG_LEVEL=info
ENABLE_SWAGGER=false

# Backup Settings
AUTO_BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_COMPRESS=true